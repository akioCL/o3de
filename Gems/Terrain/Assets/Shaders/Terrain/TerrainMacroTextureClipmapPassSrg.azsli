#pragma once

#include <Atom/Features/SrgSemantics.azsli>
#include <TerrainSrg.azsli>
#include <../Materials/Types/MaterialInputs/BaseColorInput.azsli>

ShaderResourceGroup TerrainMaterialSrg : SRG_PerMaterial
{
    Sampler m_sampler
    {
        AddressU = Wrap;
        AddressV = Wrap;
        MinFilter = Linear;
        MagFilter = Linear;
        MipFilter = Linear;
        MaxAnisotropy = 16;
    };

    // Base Color
    float3 m_baseColor;

    // Detail Material Properties
    float m_detailTextureMultiplier;
    float m_detailFadeDistance;
    float m_detailFadeLength;
}

ShaderResourceGroup PassSrg : SRG_PerPass_WithFallback
{
    float3 m_currentViewPosition;
    float3 m_previousViewPosition;

    float3 m_worldBoundsMin;
    float3 m_worldBoundsMax;

    float4 m_previousClipmapCenters[5];
    float4 m_currentClipmapCenters[5];

    uint m_fullUpdateFlag;

    RWTexture2D<float4> m_macroColorClipmaps[4];
    RWTexture2D<float4> m_macroColorClipmapPyramid;
}
