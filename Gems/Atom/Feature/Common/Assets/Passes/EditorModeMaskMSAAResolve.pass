{
    // Renders entities of interest to a mask as controlled by the entity mask id
    "Type": "JsonSerialization",
    "Version": 1,
    "ClassName": "PassAsset",
    "ClassData": {
        "PassTemplate": {
            "Name": "EditorModeMaskMSAAResolveTemplate",
            "PassClass": "FullScreenTriangle",
            "Slots": [
                {
                    "Name": "InputEntityMaskMSAA",
                    "SlotType": "Input",
                    "ShaderInputName": "m_entityMaskMSAA",
                    "ScopeAttachmentUsage": "Shader"
                },
                {
                    "Name": "OutputEntityMask",
                    "SlotType": "Output",
                    "ScopeAttachmentUsage": "RenderTarget",
                    // Clear the mask to no entities of interest each frame
                    "LoadStoreAction": {
                        "ClearValue": {
                            "Value": [
                                0.0,
                                0.0,
                                0.0,
                                0.0
                            ]
                        },
                        "LoadAction": "Clear"
                    }
                }
            ],
            "ImageAttachments": [
                {
                    "Name": "OutputEntityMaskAttachment",
                    "SizeSource": {
                        "Source": {
                            "Pass": "PipelineGlobal",
                            "Attachment": "SwapChainOutput"
                        }
                    },
                    "ImageDescriptor": {
                        // Use R8G8B8A8 format for now, actual format will be determined in LYN-9878 
                        "Format": "R8G8B8A8_UNORM",
                        "SharedQueueMask": "Graphics"
                    }
                }
            ],
            "Connections": [
                {
                    "LocalSlot": "OutputEntityMask",
                    "AttachmentRef": {
                        "Pass": "This",
                        "Attachment": "OutputEntityMaskAttachment"
                    }
                }
            ],
            "PassData": {
                "$type": "FullscreenTrianglePassData",
                "ShaderAsset": {
                    "FilePath": "Shaders/PostProcessing/EditorModeMaskResolve.shader"
                },
                "PipelineViewTag": "MainCamera"
            }
        }
    }
}